<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.david.giochino.MainActivity">

    <TextView
        android:id="@+id/punteggio"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Punteggio:" />

    <FrameLayout

        android:background="@drawable/wood"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:alpha="0.75"
            android:layout_gravity="center"
            android:text="Premi per iniziare" />
        <ImageView
            android:id="@+id/ragno"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ragno"/>


        <Button
            android:id="@+id/sx"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:text="sx"
            android:alpha="0"

            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/dx"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:alpha="0"
            android:layout_gravity="bottom|right"
            android:text="dx" />

        <ImageView
            android:id="@+id/ragnatella"
            android:layout_width="546dp"
            android:layout_height="175dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/web" />


    </FrameLayout>

</android.widget.LinearLayout>
